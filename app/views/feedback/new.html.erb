<h1><%= t('.header') %></h1>

  <%= form_with url: feedback_index_path, html: { method: :post }, local: true do |form| %>
  
    <div class="form-group"> 
      <%= form.label :name, t('.name') %><br>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">  
      <%= form.label :email, t('.email') %><br>
      <%= form.email_field :email %>
    </div>

    <div class="form-group">  
      <%= form.label :message, t('.message') %><br>
      <%= form.text_area :message, size: "70x10" %>
    </div>

    <p><%= form.submit t('.submit'), class: 'btn btn-primary' %></p>
  <% end %>
