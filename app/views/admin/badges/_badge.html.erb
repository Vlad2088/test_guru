<tr>
  <td><%= badge.title %></td>
  <td><%= image_tag badge.image.url(:thumb) %></td>
 
  <td>
  <%= link_to t('.show'), admin_badge_path(badge) %> |
    <%= link_to t('.edit'), edit_admin_badge_path(badge) %> |
    <%= link_to t('.delete'),
                admin_badge_path(badge),
                method: :delete,
                data:    { confirm: t('.confirm') } %>
  </td>
</tr>
