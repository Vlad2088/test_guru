<header>
  <h1><%= link_to 'Test Guru', root_path %></h1>
  
  <% if logged_in? %>
    <p class="nav user">Welcome, <b><%= current_user.name %></b></p>
    <%= link_to 'Tests', tests_path %>
    <%= link_to 'Logout', logout_path, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% else %>
    <%= link_to 'Login', login_path %>
    <%= link_to 'Registration', signup_path %>
  <% end %>

</header>
