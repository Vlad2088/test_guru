<header>
  <h1><%= link_to 'Test Guru', root_path %></h1>
  
  <% if user_signed_in? %>
    <p class="nav user"><%= t('.welcome') %>, <b><%= current_user.first_name %></b></p>
    <%= link_to t('.tests'), tests_path %>
    <%= link_to t('.logout'), destroy_user_session_path, method: :delete, data: { confirm: t('.confirm') } %>
  <% else %>
    <%= link_to t('.login'), new_user_session_path %>
    <%= link_to t('.registration'), new_user_registration_path %>
  <% end %>

</header>
